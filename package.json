{
  "name": "@motioneffector/dialogue",
  "version": "1.0.0",
  "description": "Branching dialogue and interaction tree runner",
  "author": "motioneffector",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/motioneffector/dialogue"
  },
  "homepage": "https://github.com/motioneffector/dialogue#readme",
  "bugs": {
    "url": "https://github.com/motioneffector/dialogue/issues"
  },
  "keywords": [
    "dialogue",
    "branching-narrative",
    "conversation",
    "interactive-fiction",
    "game-development",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:manual",
    "build:manual": "node scripts/build-manual.cjs",
    "test": "vitest",
    "test:run": "vitest run --exclude src/fuzz.test.ts",
    "fuzz:thorough": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' FUZZ_THOROUGH=1 vitest run src/fuzz.test.ts --testTimeout=120000",
    "fuzz:quick": "FUZZ_THOROUGH=1 FUZZ_DURATION_MS=10000 vitest run src/fuzz.test.ts --testTimeout=30000",
    "lint": "eslint src",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "marked": "^12.0.2",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  }
}
